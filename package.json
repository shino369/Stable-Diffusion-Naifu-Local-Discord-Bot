{
  "name": "NAI-discord-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "novelAI discord bot with local environment",
  "main": "./src/index.js",
  "author": "Anthony Wong <nakagame02@gmail.com>",
  "license": "ISC",
  "baseUrl": "./",
  "scripts": {
    "build": "tsc",
    "start": "npx ts-node --experimental-specifier-resolution=node ./src/index.ts",
    "nodemon-start": "nodemon --experimental-specifier-resolution=node ./src/index.ts",
    "run-build-start": "NODE_ENV=build nodemon --experimental-specifier-resolution=node ./build/index.js",
    "test": "set NODE_ENV=dev&& nodemon --experimental-specifier-resolution=node ./src/index.ts",
    "test2": "set NODE_ENV=build&& nodemon --experimental-specifier-resolution=node ./build/index.js"
  },
  "dependencies": {
    "@discordjs/rest": "^1.1.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.4",
    "chalk": "4.1.2",
    "discord.js": "^14.6.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-fetch": "^3.2.10",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "typescript": "^4.9.0-dev.20221024"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**",
      "**/docs/**",
      "**/saved_setting.json"
    ],
    "delay": 2500
  }
